{
  "name": "ology-brewing/ology-brewing",
  "description": "Modern brewery management system with Untappd and Dropbox integration",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Ology Brewing",
      "email": "dev@ologybrewing.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "wp-coding-standards/wpcs": "^2.3",
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "files": [
      "includes/autoloader.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "OlogyBrewing\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit tests/unit",
    "test:integration": "phpunit tests/integration",
    "test:all": "phpunit",
    "cs": "phpcs --standard=WordPress includes/ admin/",
    "cs:fix": "phpcbf --standard=WordPress includes/ admin/",
    "stan": "phpstan analyse includes/ --level=5",
    "watch": "phpunit --watch",
    "install-cs": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
